	<role maxCount="1" minCount="1" name="Buyer">
		<description xml:lang="en">
			<paragraph>
				<text>This role represents the buyer of the transport service being requested.</text>
			</paragraph>
		</description>
		<description xml:lang="sv">
			<paragraph>
				<text>Denna roll representerar köparen av transporttjänsten som efterfrågas.</text>
			</paragraph>
		</description>
	</role>
	<role maxCount="1" minCount="1" name="Auctioneer">
		<description xml:lang="en">
			<paragraph>
				<text>This role represents the auctioneer that brokers the sale of the service.</text>
			</paragraph>
		</description>
		<description xml:lang="sv">
			<paragraph>
				<text>Denna roll representerar auktionsförrättaren som förmedlar försäljningen av tjänsten.</text>
			</paragraph>
		</description>
