<contract archiveOpt="P3M" archiveReq="P1M" canActAsTemplate="true" duration="P1M" id="BuyServiceExampleTemplate" visibility="PublicSearchable" xmlns="urn:ieee:iot:leg:sc:1.0">
	<ToBuy xmlns="https://paiwise.tagroot.io/Schema/Marketplace.xsd">
		<Description>
			<Type>
				<Uri>https://example.com/PackageDelivery</Uri>
			</Type>
			<Class>
				<Uri>https://example.com/TransportService</Uri>
			</Class>
			<Node>
				<String>Demo</String>
			</Node>
			<Tag name="ProductNumber">
				<ParameterReference parameter="ProductNumber" />
			</Tag>
			<Tag name="Quantity">
				<ParameterReference parameter="Quantity" />
			</Tag>
			<Tag name="Description">
				<ParameterReference parameter="Description" />
			</Tag>
		</Description>
