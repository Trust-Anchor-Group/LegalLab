<?xml version="1.0" encoding="utf-8" ?>
<contract xmlns="urn:ieee:iot:leg:sc:1.0"
          id="CreateTokenContract1StateMachineMicroLoan"
          archiveOpt="P3M"
          archiveReq="P1M"
          canActAsTemplate="true"
          duration="P2Y"
          visibility="Public">
	<Create xmlns="https://paiwise.tagroot.io/Schema/NeuroFeatures.xsd">
		<TokenID>
			<Random />
		</TokenID>
		<Creator>
			<RoleReference role="Creator"/>
		</Creator>
		<Owner>
			<RoleReference role="Creator"/>
		</Owner>
		<Certifier>
			<RoleReference role="Certifier"/>
		</Certifier>
		<TrustProvider>
			<RoleReference role="TrustProvider"/>
		</TrustProvider>
		<Value>
			<ParameterReference parameter="Value"/>
		</Value>
		<Currency>
			<ParameterReference parameter="Currency"/>
		</Currency>
		<CommissionPercent>
			<ParameterReference parameter="CommissionPercent"/>
		</CommissionPercent>
		<Expires>
			<ParameterReference parameter="Expires"/>
		</Expires>
		<CreatorCanDestroy>
			<Boolean>false</Boolean>
		</CreatorCanDestroy>
		<OwnerCanDestroyBatch>
			<Boolean>false</Boolean>
		</OwnerCanDestroyBatch>
		<OwnerCanDestroyIndividual>
			<Boolean>true</Boolean>
		</OwnerCanDestroyIndividual>
		<CertifierCanDestroy>
			<Boolean>false</Boolean>
		</CertifierCanDestroy>
		<Definition>
			<StateMachine xmlns="https://paiwise.tagroot.io/Schema/StateMachines.xsd" startState="Calculating">
				<Variable id="Current">
					<Number>0</Number>
				</Variable>
				<Variable id="Stored">
					<Number>0</Number>
				</Variable>
				<State id="Calculating">
					<OnEvent actionRef="Set">
						<OnTextNote noteVariable="Note"/>
					</OnEvent>
					<OnEvent actionRef="Log">
						<OnExternalTextNote noteVariable="Note"/>
					</OnEvent>
					<OnEvent actionRef="Add">
						<OnXmlNote localName="Add" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd" noteVariable="Note"/>
					</OnEvent>
					<OnEvent actionRef="Add">
						<OnExternalXmlNote localName="Add" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd" noteVariable="Note"/>
					</OnEvent>
					<OnEvent actionRef="Subtract">
						<OnXmlNote localName="Subtract" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd" noteVariable="Note"/>
					</OnEvent>
					<OnEvent actionRef="Subtract">
						<OnExternalXmlNote localName="Subtract" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd" noteVariable="Note"/>
					</OnEvent>
					<OnEvent actionRef="Multiply">
						<OnXmlNote localName="Multiply" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd" noteVariable="Note"/>
					</OnEvent>
					<OnEvent actionRef="Multiply">
						<OnExternalXmlNote localName="Multiply" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd" noteVariable="Note"/>
					</OnEvent>
					<OnEvent actionRef="Divide">
						<OnXmlNote localName="Divide" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd" noteVariable="Note"/>
					</OnEvent>
					<OnEvent actionRef="Divide">
						<OnExternalXmlNote localName="Divide" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd" noteVariable="Note"/>
					</OnEvent>
					<OnEvent actionRef="Clear">
						<OnXmlNote localName="Clear" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd"/>
					</OnEvent>
					<OnEvent actionRef="Clear">
						<OnExternalXmlNote localName="Clear" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd"/>
					</OnEvent>
					<OnEvent actionRef="Memory">
						<OnXmlNote localName="Memory" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd"/>
					</OnEvent>
					<OnEvent actionRef="Memory">
						<OnExternalXmlNote localName="Memory" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd"/>
					</OnEvent>
					<OnEvent actionRef="Recall">
						<OnXmlNote localName="Recall" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd"/>
					</OnEvent>
					<OnEvent actionRef="Recall">
						<OnExternalXmlNote localName="Recall" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd"/>
					</OnEvent>
					<OnEvent newState="Done">
						<OnXmlNote localName="Done" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd"/>
					</OnEvent>
					<OnEvent newState="Done">
						<OnExternalXmlNote localName="Done" namespace="https://lab.tagroot.io/Downloads/TestSchemaStateMachines.xsd"/>
					</OnEvent>
				</State>
				<State id="Done">
					<OnEnter actionRef="End"/>
				</State>
				<Action id="Set">
					<PersistVariable name="Current" value="{Num(Note)}"/>
				</Action>
				<Action id="Log">
					<LogEvent message="{Note}" type ="Notice"/>
				</Action>
				<Action id="Add">
					<PersistVariable name="Current" value="{Current+Num(SelectXml(Note,'/default:Add'))}"/>
				</Action>
				<Action id="Subtract">
					<PersistVariable name="Current" value="{Current-Num(SelectXml(Note,'/default:Subtract'))}"/>
				</Action>
				<Action id="Multiply">
					<PersistVariable name="Current" value="{Current*Num(SelectXml(Note,'/default:Multiply'))}"/>
				</Action>
				<Action id="Divide">
					<PersistVariable name="Current" value="{Current/Num(SelectXml(Note,'/default:Divide'))}"/>
				</Action>
				<Action id="Clear">
					<PersistVariable name="Current">
						<Value>
							<Number>0</Number>
						</Value>
					</PersistVariable>
				</Action>
				<Action id="Memory">
					<PersistVariable name="Stored" value="{Current}"/>
				</Action>
				<Action id="Recall">
					<PersistVariable name="Current" value="{Stored}"/>
				</Action>
				<Action id="End">
					<End/>
				</Action>
			</StateMachine>
		</Definition>
		<FriendlyName>
			<String>Calculator</String>
		</FriendlyName>
		<Category>
			<String>Example</String>
		</Category>
		<Description>
			<String>Example token used to demonstrate the creation of a simple *calculator* using a *state machine*.
The internal state is changed by adding *external* or *owner* XML Notes to the token, depending on function. 
The current owner can add personal XML Notes. The creator, Trust Provider, any certifiers and approved (by the Trust Provider)
external parties can add external notes to the token. How these tokens affect the state machine can be seen from the state diagram.</String>
		</Description>
		<Glyph contentType="image/png"></Glyph>
	</Create>
	<role name="Creator" minCount="1" maxCount="1">
		<description xml:lang="en">
			<paragraph>
				<text>The part that creates the </text>
				<italic>
					<text>calculator</text>
				</italic>
				<text> arrangement, including the </text>
				<italic>
					<text>calculator</text>
				</italic>
				<text> token and the corresponding state-machine that executes the </text>
				<italic>
					<text>calculator</text>
				</italic>
				<text>.</text>
			</paragraph>
		</description>
	</role>
	<role name="Certifier" minCount="1" maxCount="1">
		<description xml:lang="en">
			<paragraph>
				<text>A part that acts as a certifier of the validity of the calculator.</text>
			</paragraph>
		</description>
	</role>
	<role name="TrustProvider" minCount="1" maxCount="1">
		<description xml:lang="en">
			<paragraph>
				<text>The part that acts as a host of the token and approves its creation.</text>
			</paragraph>
		</description>
	</role>
	<parts>
		<templateOnly/>
	</parts>
	<parameters>
		<numericalParameter name="Value" guide="Value of token" min="0" minIncluded="false">
			<description xml:lang="en">
				<paragraph>
					<text>The initial value of the token.</text>
				</paragraph>
			</description>
		</numericalParameter>
		<stringParameter name="Currency" guide="Currency" minLength="3" maxLength="3" regEx="\w{3}">
			<description xml:lang="en">
				<paragraph>
					<text>The currency of the token.</text>
				</paragraph>
			</description>
		</stringParameter>
		<numericalParameter name="CommissionPercent" guide="Commision (%)" min="0" max="100">
			<description xml:lang="en">
				<paragraph>
					<text>The commission the Trust Provider gets for creating the token and managing the </text>
					<italic>
						<text>calculator</text>
					</italic>
					<text>.</text>
				</paragraph>
			</description>
		</numericalParameter>
		<dateParameter name="Expires" guide="Expiry date" exp="Expires&gt;Now.Date">
			<description xml:lang="en">
				<paragraph>
					<text>When token expires.</text>
				</paragraph>
			</description>
		</dateParameter>
	</parameters>
	<humanReadableText xml:lang="en">
		<section>
			<header>
				<text>Calculator</text>
			</header>
			<body>
				<paragraph>
					<text>This contract creates a token representing a </text>
					<italic>
						<text>calculator</text>
					</italic>
					<text>.</text>
				</paragraph>
			</body>
		</section>
	</humanReadableText>
</contract>